<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">






                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_weight="3.85"
                    android:text="TextView"
                    android:textSize="18dp"
                    android:textStyle="bold|italic"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/textViewavailable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="15.24"
                    android:text="TextView"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_above="@+id/titleTextView"
                    android:layout_alignRight="@+id/titleTextView"
                    android:layout_alignEnd="@+id/titleTextView"
                    android:layout_marginBottom="85dp" />

                <TextView
                    android:id="@+id/rateTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="12.75"
                    android:text="TextView"
                    android:textSize="12dp"
                    android:layout_above="@+id/titleTextView"
                    android:layout_alignRight="@+id/titleTextView"
                    android:layout_alignEnd="@+id/titleTextView"
                    android:layout_marginBottom="12dp" />


    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="10dp" />

</RelativeLayout>